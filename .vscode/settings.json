{
  "files.associations": {
    "*.tex": "latex"
  },
  "files.autoSave": "off",
  "editor.formatOnSave": true,
  "[latex]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    }
  },
  "triggerTaskOnSave.tasks": {
    "Run Docker Compose for LaTeX GroupReport": ["report/GroupTemplate/*.tex"],
    "Run Docker Compose for LaTeX Reflections": [
      "report/ReflectionsTemplate/*.tex"
    ]
  }
}
